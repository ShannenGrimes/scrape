<!--Navbar-->
<nav class="navbar navbar-expand-lg navbar-dark z-depth-2" style="background: #210b5e;">

    <!-- Navbar brand -->
    <a class="navbar-brand navfont" href="/">Scraping the News with Mongo</a>

    <!-- Collapse button -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav"
        aria-controls="basicExampleNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible content -->
    <div class="collapse navbar-collapse justify-content-center" id="basicExampleNav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/scrape">
                    <i class="far fa-hand-rock"></i> Scrape Articles</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/articles-json">
                    <i class="far fa-newspaper"></i> Article JSON</a>
            </li>
        </ul>
    </div>
</nav>


<div class="container">

    <!-- First row -->
    <div class="row">
        <div class="col-lg-12">
            <h1 id="headerfont">Mongo Scraper</h1>
            <h3>NPR Current Political Headlines</h3>
        </div>
    </div>

    <!-- Row for Article -->
    {{#each article}}
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="card mb-5">
                <div class="card-body text-dark z-depth-2 rounded">
                    <h2 class="card-text" id="articletext">{{this.title}}</h2>
                    <br>
                    <div class="row">
                        <div class="col-md-6">
                            <form class="form-inline" action="{{this.link}}" method="GET" target="_blank">
                                <button type="submit" class="btn btn-unique ">
                                    <i class="fas fa-book-reader"></i> Read Article</button>
                            </form>
                        </div>
                        <div class="col-md-6">
                            <a class="btn btn-unique" href="/articles/{{this.id}}" data-toggle="modal" data-target="#notesModal">
                                <i class="fas fa-edit"></i> Add or Review Notes</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>

    <!-- Div for Modal -->
    <div class="modal fade" id="notesModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Add a Note for this Article</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">
                    <div class="savednotes">

                        {{#if this.note}}
                        {{#each this.note}}
                        <div class="text-center">
                            <p>{{this.title}}</p>
                            <p>{{this.body}}</p>
                            {{/each}}
                            {{/if}}

                        </div>
                        <div class="md-form mb-5">
                            <i class="fa fa-user prefix grey-text"></i>
                            <input type="text" id="title" class="form-control validate">
                            <label data-error="wrong" data-success="right" for="form34">Title</label>
                        </div>
                        <div class="md-form">
                            <i class="fa fa-pencil prefix grey-text"></i>
                            <textarea type="text" id="body" class="md-textarea form-control" rows="4"></textarea>
                            <label data-error="wrong" data-success="right" for="form8">Note</label>
                        </div>
                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <form class="form-inline" action="/articles/{{this.id}}" method="POST">
                            <button type="submit" class="btn btn-unique">
                                <i class="fas fa-edit"></i> Save a Note</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        {{/each}}
    </div>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>